# GraphQL schema example
#
# https://gqlgen.com/getting-started/

scalar DateTime

type Query {
  review: Review
  monthReview(year: Int!, month: Int!): Review
}

type Mutation {
  createReview(input: CreateReviewInput!): Review!
  createNote(input: CreateNoteInput!): Note!
  deleteNote(id: ID!): Note!
}

type Review {
  id: ID!
  year: Int!
  month: Int!
  notes: [Note!]!
  created_at: DateTime!
  updated_at: DateTime!
}

type Note {
  id: ID!
  review_id: ID!
  content: String!
  type: String!
  created_at: DateTime!
  updated_at: DateTime!
}

input CreateReviewNoteInput {
  content: String!
  type: String!
}

input CreateReviewInput {
  year: Int!
  month: Int!
  notes: [CreateReviewNoteInput!]!
}

input CreateNoteInput {
  review_id: ID!
  content: String!
  type: String!
}
